extends ../layout

block content

    script.
        $(function() {
            $(".btn-list").click(function() {
                document.location.href = "/book"
            })

            $(".btn-delete").click(function() {
                if(confirm("정말로 삭제할까요?")) {
                    document.location.replace("/book/delete/#{book._id}")//pug 데이터를 js에서 가져오려면 "#{data}" 형식으로 사용한다
                }
            })
        })
    form(method="POST").w3-container
        fieldset.w3-border-blue
            if formTitle == "UPDATE"
                legend 도서정보 수정
            else
                legent 도서정보 입력

            -var inputClasses = ["w3-input", "w3-border"]
            .w3-container
                label(for="bTitle").w3-text-blue 도서명
                input#bTitle(name="bTitle", class=inputClasses, value=book.bTitle)
            .w3-container
                label(for="bWriter").w3-text-blue 저자
                input#bWriter(name="bWriter", class=inputClasses, value=book.bWriter)
            .w3-container
                label(for="bComp").w3-text-blue 출판사
                input#bComp(name="bComp", class=inputClasses, value=book.bComp)
            .w3-container
                label(for="bPrice").w3-text-blue 가격
                input#bPrice(name="bPrice", class=inputClasses, value=book.bPrice)

            -var btnClasses = ["w3-button", "w3-right"]
            button(class=btnClasses).w3-blue.btn-save 저장
            button(type="button", class=btnClasses).w3-red.btn-delete 삭제
            button(type="button", class=btnClasses).w3-green.btn-list 목록