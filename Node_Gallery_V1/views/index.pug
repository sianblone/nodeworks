extends layout

block content
  style.
    .card_ev {
      cursor: pointer;
    }
    .card_ev:hover img {
      opacity : 0.5;
      transition: 0.2s;
    }

  script.
    $(function() {
      $("button.btn-upload").click(function() {
        document.location.href = "/gallery/upload"
      })

      $(".card_ev").click(function() {
        document.location.href = "/gallery/view/" + $(this).data("id")
        
      })
    })
  
  section.w3-container.w3-padding-32
    
    article.w3-padding-16.w3-row
      each gallery in galleryList
        div.w3-card-2.w3-col.l3.m2.s3.w3-margin.w3-round.card_ev(data-id=gallery._id)
          img(src="/uploads/" + gallery.gUploadPhotoName, width="400px").w3-round
          div.w3-container.w3-margin.w3-center
            h3.w3-text-blue #{gallery.gStrTitle}

    article.w3-padding-16
      button.w3-button.w3-white.w3-border.w3-border-blue.w3-block.btn-upload 사진 올리기